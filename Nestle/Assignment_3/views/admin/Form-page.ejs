<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Form Page</h2>
        <form id="form">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name">
                <span id="error-message-1" style="display: none; color: red;">Name is Required</span>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price">
                <span id="error-message-2" style="display: none; color: red;">Price is Required</span>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description">
                <span id="error-message-4" style="display: none; color: red;">Description is Required</span>
            </div>
            <input type="submit" class="btn btn-primary" value="Submit">
        </form>
    </div>

    <script>
        window.onload = function () {
            var form = document.getElementById("form");
            form.onsubmit = handleFormSubmit;
        }

        function handleFormSubmit(event) {
            event.preventDefault();

           
            let nameField = document.getElementById("name");
            let priceField = document.getElementById("price");
            let descriptionField = document.getElementById("description");

         
            let errorMessage1 = document.getElementById("error-message-1");
            let errorMessage2 = document.getElementById("error-message-2");
            let errorMessage4 = document.getElementById("error-message-4");

   
            errorMessage1.style.display = "none";
            errorMessage2.style.display = "none";
            errorMessage4.style.display = "none";

            let isValid = true;


            if (!nameField.value) {
                errorMessage1.style.display = "inline";
                isValid = false;
            }


            if (!priceField.value) {
                errorMessage2.style.display = "inline";
                isValid = false;
            }

 
            if (!descriptionField.value) {
                errorMessage4.style.display = "inline";
                isValid = false;
            }


            if (isValid) {
                alert('Data Submitted Successfully');
                console.log("Valid form");
                event.target.reset();
            } else {
                console.log("Invalid form");
            }
        }
    </script>
</body>
</html>
