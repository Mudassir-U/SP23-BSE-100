<h4>Edit Category</h4>
<form action="/admin/category/edit/<%= category._id %>?_method=PUT"method="post">
    <div class="form-group">
        <label for="titleInput">Title</label>
        <input name="title" type="text" class="form-control" id="titleInput" aria-describedby="emailHelp" placeholder="Enter Title" value="<%= category.title %> "/>
        <small id="emailHelp" class="form-text text-muted">Category Title</small>
      </div>
      <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea name="description" type="text" class="form-control" id="descriptionInput" aria-describedby="emailHelp" placeholder="Enter Description"><%= category.description %></textarea>
        <small id="emailHelp" class="form-text text-muted">Category Details</small>
      </div>
      <div class="form-group">
        <button class="submit">Update Category</button>
      </div>

</form>