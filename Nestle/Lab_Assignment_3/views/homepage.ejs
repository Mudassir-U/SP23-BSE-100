<h4 class="featured-products-title">Nestle Products</h4>
<div class="row">
    <% for( let index = 0; index < products.length; index++ ) { %>
        <div class="col-4">
            <div class="card product-card" style="width: 18rem;">
                <img src="/<%= products[index].picture %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= products[index].title %></h5>
                    <p class="card-text"><%= products[index].description %></p>
                    <a href="/add-to-cart/<%= products[index]._id %>" class="btn btn-primary">PKR: <%= products[index].price %> Add To Cart</a>
                </div>
            </div>
        </div>
    <% } %>
</div>
<%-contentFor("footer-area") %>
<p>This content is added by homepage</p>

<%-contentFor("styles-area") %>
<style>
    /* Header Styling */
    .featured-products-title {
        text-align: center;
        margin-bottom: 20px;
        font-family: 'Arial', sans-serif;
        color: #ffffff; /* Changed to white */
        background-color: #00796b; /* Teal background */
        padding: 10px;
        border-radius: 8px;
    }

    /* Card Styling */
    .product-card {
        margin: 10px auto;
        border: none; /* Remove border */
        border-radius: 15px;
        background-color: #f7f7f7; /* Light grey background */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .product-card img {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .product-card .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #00796b; /* Teal color for titles */
    }

    .product-card .card-text {
        font-size: 0.9rem;
        color: #444; /* Dark grey for text */
    }

    .product-card .btn-primary {
        background-color: #004d40; /* Darker teal */
        border-color: #004d40;
        font-size: 0.9rem;
        padding: 10px 15px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .product-card .btn-primary:hover {
        background-color: #00251a; /* Even darker teal */
        transform: scale(1.05);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .col-4 {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
</style>
